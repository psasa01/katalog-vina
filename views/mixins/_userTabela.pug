mixin userTabela(korisnik = {})

    

    table.bordered.highlight.responsive-table
        thead
            tr
                td 
                    strong Korisnik
                td 
                    strong Email
                td 
                    strong Registrovan
                td 
                    strong Zadnja posjeta
                td 
                    strong Broj vina
                td 
                    strong Uloga
                td.right 
        each korisnik in korisnici

            tbody
                tr  
                    td(style="display: inline-flex")
                        img.circle.responsive-img.user-image(src=korisnik.slika || '/images/user.png' style="height: 3em !important; margin-left: 1em")
                        .brown-text.text-darken-2.left(style="padding: 25px !important;") #{korisnik.ime}      
                    td= korisnik.email
                    td
                        - h.moment.locale('bs')
                            p #{h.moment(korisnik.registrovan).format('ll')}, #{h.moment(korisnik.registrovan).format('LT')}
                    td
                        - h.moment.locale('bs')
                            p #{h.moment(korisnik.zadnjiPutVidjen).format('ll')}, #{h.moment(korisnik.zadnjiPutVidjen).format('LT')}

                    td= korisnik.brojVina

                    if korisnik.level == 1
                        td Glavni Admin
                    else if korisnik.level < 11
                        td Admin
                    else    
                        td User

                    if user.level == 1
                        if korisnik.level > 10
                            td.right
                                a(href=`/admin/dodijeli/${korisnik._id}`)    
                                    button.btn.waves-effect.waves-light.indigo.lighten-1.white-text(style="padding: 0em 1em; margin-right: 1em") Dodijeli admin prava   
                        else if korisnik.level < 11 && korisnik.level > 1
                            td.right
                                a(href=`/admin/oduzmi/${korisnik._id}`)
                                    button.btn.waves-effect.waves-light.red.lighten-1.white-text(style="padding: 0em 1.1em; margin-right: 1em") Oduzmi admin prava        
                        else
                            td.right 
                    else
                        
                        
                            
                    