mixin login-form

    .container
        .row
            br
            br
            .z-depth-3.brown.lighten-5.col.s12.login-forma
                form(action='/login' method="POST")
                    h4.login-h4.brown-text.center-align.col.s10.offset-s1 Molimo unesite podatke za prijavu
                        br    
                        .input-field.col.s10.offset-s1
                            input#email.validate(type='email' name="email")
                            label(for='email') Email
                        .input-field.col.s10.offset-s1
                            input#password.validate(type='password' name="password")
                            label(for='password') Šifra
                        .col.s10.offset-s1
                            br
                            row
                                button.btn.btn-large.waves-effect.waves-light.col.s12.brown.btn-prijava(type='submit' name='login') Prijava
                                a.btn.btn-large.waves-effect.waves-light.col.s12.blue.darken-4.btn-fb(href='/auth/facebook') 
                                    .fa.fa-facebook.fa-2x  
                                    | acebook prijava
                            
                                    
                        .col.s10.offset-s1
                            label(style='float: right;')
                                br
                                a.pink-text(href='#!')
                                    b Zaboravili ste šifru?
                                  
                        br
                        br                  
