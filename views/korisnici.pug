extends layout


block content
    .container 
        .row
            h2= title
            hr

                     
            each korisnik in korisnici
                a(href=`/korisnici/${korisnik._id}`) 
                    Button.btn.waves-effect.waves-light.btn-zemlja.brown #{korisnik._id} - (#{korisnik.count}) 
                     
           
            br
            br
            hr
            each vino in vina
                
                a.modal-trigger(href=`#${vino.slug}`)
                    .col.s12.m6.l3
                        .card.z-depth-2
                            .card-image
                                img(src=`/images/${vino.slika || '.public/images/slika.jpg'}`)
                                .korisnik
                                    p.card-ime= vino.ime
                                .card-title.card-style
                                    p= vino.naziv
                            .card-action.brown.lighten-4.action-style
                                p= vino.zemlja.toUpperCase()

                #ukloni-modal.modal
                    .modal-content
                        h5 Da li zaista želite da uklonite #{vino.naziv} vino?
                    .modal-footer
                        a.modal-action.modal-close.waves-effect.waves-green.btn-flat(href=`/vino/${vino._id}/ukloni`) Ukloni
                        a.modal-action.modal-close.waves-effect.waves-green.btn-flat(href='#!') Zatvori
                
                div(id= vino.slug).modal.modal-fixed-footer.vino-modal
                    .modal-content
                        .grid-container
                            .slika 
                                img.modal-slika(src=`/images/${vino.slika || 'slika.jpg'}`)
                            .tekst1
                                .row
                                    
                                       
                                    .col.l6.offset-l4
                                        h5.brown-text.left-align Naziv Vina: #{vino.naziv}
                                        h5.brown-text.left-align Zemlja Porijekla: #{vino.zemlja}
                            .tekst2 
                                                                          
                                        
                                    .col.l6.offset-l4
                                       
                                        h5.brown-text.left-align Proizvođač: #{vino.proizvodjac}
                                        h5.brown-text.left-align Vrsta: #{vino.vrsta}
                                                                                
                            
                            .tekst3 
                                                                           
                                    .col.l6.offset-l4
                                        
                                        h5.brown-text.left-align Godina berbe: #{vino.godina}
                                        
                            .tekst4
                                
                                    .col.l6.offset-l4
                                                                                

                                        p.brown-text.left-align Procenat Alkohola: #{vino.alkohol}%
                                        p.brown-text.left-align Veličina Boce: #{vino.velicina} litara

                                
                    .modal-footer
                        - h.moment.locale('bs')
                            p.modal-datum #{ime} Dodao #{vino.ime}, #{h.moment(vino.datum).fromNow()}

                            
                            
                        if user && vino.korisnik.equals(user._id)
                            .fixed-action-btn.button-fab
                                a.btn-floating.btn-large.brown
                                    i.large.material-icons chevron_left
                                ul
                                    li
                                        a.btn-floating.red(href=`/vino/${vino._id}/ukloni`)
                                            i.material-icons clear
                                    li
                                        a.btn-floating.green(href=`/vino/${vino._id}/uredi`)
                                            i.material-icons mode_edit
                        
                        else if user && user.level === 1
                            .fixed-action-btn.button-fab
                                a.btn-floating.btn-large.brown
                                    i.large.material-icons chevron_left
                                ul
                                    li
                                        a.btn-floating.red(href=`/vino/${vino._id}/ukloni`)
                                            i.material-icons clear
                                    li
                                        a.btn-floating.green(href=`/vino/${vino._id}/uredi`)
                                            i.material-icons mode_edit